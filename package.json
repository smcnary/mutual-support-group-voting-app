{
  "name": "mutual-support-group-voting-app",
  "version": "1.0.0",
  "description": "A real-time voting application for mutual support groups",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm install && npm run build",
    "install-client": "cd client && npm install",
    "railway-build": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "voting",
    "survey",
    "real-time",
    "group"
  ],
  "author": "",
  "license": "MIT"
}
